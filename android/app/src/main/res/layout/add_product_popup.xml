<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popupLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeBtnAdmin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:contentDescription="@string/closeButton"
        android:paddingStart="0dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        app:srcCompat="@drawable/xbtn"
        app:tint="#f7fff2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_40sdp"
        android:background="@drawable/rounded_shape"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/chosenImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/chosen_image_for_product_upload"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/productName"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false" />

    <EditText
        android:id="@+id/productCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/productCost"
        android:inputType="number"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chooseButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorOrange"
        android:ems="14"
        android:background="@drawable/rounded_edges"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:text="@string/chooseButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="@color/colorOrange"
        android:layout_marginBottom="@dimen/_5sdp"
        android:ems="14"
        android:background="@drawable/rounded_edges"
        android:layout_gravity="center"
        android:textSize="@dimen/_10ssp"
        android:text="@string/uploadButton" />

    </LinearLayout>
</LinearLayout>